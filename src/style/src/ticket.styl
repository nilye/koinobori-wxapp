.tkt-card
  > view
    background: #fff
  &-info
    border-radius 8px 8px 0 0
  &-qrcode
    position: relative
    border-radius 0 0 8px 8px

  .tkt-code
    background #f5f5f5
    br(4px)

  .qr-code
    height 200px
    width 200px
    &.disabled
      opacity 0.12

  .checked-badge
    br-pill()
    height 80px
    width 80px
    box-sizing border-box
    font-size 21px
    font-weight bolder
    display flex
    align-items center
    justify-content center
    color: $theme.acc
    border: 4px solid $theme.acc
    position absolute
    top:-16px;
    right:-32px;
    transform:rotate(-30deg)

  &-rip
    height:16px;
    position relative;
    m(x, 1)
    &:before
    &:after
      content ' '
      position absolute
      height 16px
      width 16px
      top: -50%
      margin-top: 4px
      background #f5f5f5
      br-circle()
      border: 4px solid transparent
      border-top-color: #fff
      border-right-color: #fff
    &:before
      left: -20px
      transform: rotate(45deg)
    &:after
      right: -20px;
      transform: rotate(225deg)
    &-line
      border-top 3px dotted #eee
      margin-top 6px
      width 100%
      height 3px


.qr-code-canvas
  height 200px
  width 200px
  position: fixed
  left: -500px
  bottom: -500px
  opacity 0
