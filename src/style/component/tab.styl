.tabs
  display:flex;
  justify-content:center;
  background:#fff;
  font-size:16px;
  height 56px

  &.fixed
    position:fixed;
    width:100%;
    top:0;

  .tab
    p(y,1)
    p(x,2)
    display flex
    align-items:center;
    border-bottom: 3px solid transparent

    &.active
      border-bottom: 3px solid $theme.pri

.tab-swiper
  swiper-item
    min-height 100vh
    height auto
