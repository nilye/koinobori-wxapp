.flex-center
  display flex
  align-items center
  justify-content center

.flex-x-center
  display: flex
  align-items: center


for i in (block inline flex grid none)
  .d-{i}
    display: i

for i in (center flex-start flex-end)
  .align-{i}
    align-items: i

for i in (space-around space-between center flex-start flex-end)
  .justify-{i}
    justify-content: i

.row
  flex-direction row

.column
  flex-direction column

.flex-fill
  flex: 1 1 auto
.flex-none
  flex: none
.flex-wrap
  flex-wrap: wrap
&.row
  flex-direction row
&.column
  flex-direction column
